{
  "name": "release-pilot-action",
  "version": "1.0.0",
  "description": "GitHub Action for ReleasePilot - AI-powered release management",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "npm run build",
    "test": "jest",
    "all": "npm run format && npm run lint && npm run test && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felixgeelhaar/release-pilot-action.git"
  },
  "keywords": [
    "actions",
    "release",
    "release-management",
    "semantic-release",
    "changelog",
    "versioning",
    "ci-cd"
  ],
  "author": "Felix Geelhaar",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^20.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
